<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardEnfermedades"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:clipToPadding="false"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/arriba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtEnfermedad_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="A00"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imgEnfermedad_favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                card_view:srcCompat="@drawable/baseline_favorite_border_black_24" />

            <ImageButton
                android:id="@+id/imgEnfermedad_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                card_view:srcCompat="@drawable/baseline_public_black_24" />

            <ImageButton
                android:id="@+id/imgEnfermedad_wiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                card_view:srcCompat="@drawable/baseline_pageview_black_24" />

            <ImageButton
                android:id="@+id/imgEnfermedad_shared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="invisible"
                card_view:srcCompat="@drawable/outline_share_black_24dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/arriba"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtEnfermedad_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLERA DEBIDO A VIBRIO CHOLERAE O1, BIOTIPO " />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>